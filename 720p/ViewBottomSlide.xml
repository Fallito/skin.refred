			<viewtype label="BottomSlide">wrap</viewtype>
			<left>90</left>
			<top>520</top>
			<width>1091</width>
			<height>425</height>
			<onup>6000</onup>
			<ondown>71</ondown>
			<onleft>52</onleft>
			<onright>52</onright>
