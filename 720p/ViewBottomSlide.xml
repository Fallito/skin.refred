		<control type="group">
			<include>focus_BottomSlide</include>
		
			<control type="group">
				<left>10</left>
				<top>10</top>
				<control type="image">
					<width>100</width>
					<height>147</height>
					<texture background="true">thumbs/default_Portrait.png</texture>
					<aspectratio align="center">stretch</aspectratio>
					<include>bordertrans</include>
					<visible>IsEmpty($VAR[thumb_Portrait])</visible>
				</control>
				<control type="image">
					<left>2</left>
					<top>27</top>
					<width>96</width>
					<height>96</height>
					<include>art_DefaultIcon</include>
				</control>
				<control type="image">
					<width>100</width>
					<height>147</height>
					<texture background="true">$VAR[thumb_Portrait]</texture>
					<include>bordertrans</include>
					<aspectratio align="center" aligny="top">scale</aspectratio>
				</control>
				<control type="group">
					<left>82</left>
					<top>129</top>
					<include>overlay_Watch</include>
				</control>
			</control>
