<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">9110</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<onload>CancelAlarm(StartupCheck,true)</onload>
	<onload>AlarmClock(StartupComplete,SetProperty(StartupComplete,true,Home),00:05,silent)</onload>
	<!--<onload>RunScript(script.favourites)</onload>-->
	<!--<onload>RunScript(script.randomandlastitems,type=Movie,limit=10,method=Random,playlist=special://skin/playlists/movies/random.xsp,menu=Menu1)</onload>
	<onload>RunScript(script.randomandlastitems,type=Episode,limit=10,method=Random,playlist=special://skin/playlists/episodes/random.xsp,menu=Menu2)</onload>-->
	
	
	<controls>
	
		<control type="group">
			<include>transition_Home</include>
			<include>home_Background</include>
			<include>home_NowPlaying</include>
			
			<control type="image">
				<include>screen_Dimensions</include>
				<texture colordiffuse="base_1play">overlays/base_color.png</texture>
				<visible>!Player.HasMedia + !Player.HasAudio</visible>
				<include>fadeinout</include>
			</control>
			
		<!--widgets-->
			<include>widget_container</include>
			<include>widgetspanel</include>
			<include>hub</include>
			<include>home_weather</include>
			<include>home_PVRrecwidget</include>
			
		<!--clock-->
			<control type="group">
				<visible>Skin.HasSetting(home.time) + ![Control.HasFocus(9130) | Control.HasFocus(9140) | Control.HasFocus(9150) | Control.HasFocus(9160) |Window.IsActive(infodialog) | Window.IsActive(extendedprogressdialog)]</visible>
				<include>clock</include>
				<include>fadeinout</include>
			</control>		

							
		<!--Menu new-->
			<control type="group" >
				<posx>0</posx>
				<posy>30</posy>
				<animation tween="Back" easing="InOut" effect="slide" end="0,400" time="1000" condition="Control.HasFocus(9150) | Control.HasFocus(9160) | Control.HasFocus(9140)">Conditional</animation>
				<animation tween="Back" easing="InOut" effect="slide" start="0,250" end="0,0" time="1000" condition="!Control.HasFocus(9150) | !Control.HasFocus(9160) | !Control.HasFocus(9140)">Conditional</animation>
				<animation tween="Back" easing="InOut" effect="slide" start="0,250" end="0,0" time="1000">WindowOpen</animation>
				
				<animation tween="Back" easing="InOut" effect="slide" start="0,-720" end="0,0" time="1000" condition="!ControlGroup(5562).HasFocus() + !ControlGroup(5563).HasFocus() + !ControlGroup(5564).HasFocus() + !ControlGroup(5565).HasFocus()">Conditional</animation>
				<animation tween="Back" easing="InOut" effect="slide" start="0,0" end="0,-720" time="500" delay="500" condition="ControlGroup(5562).HasFocus() | ControlGroup(5563).HasFocus() | ControlGroup(5564).HasFocus() | + ControlGroup(5565).HasFocus()">Conditional</animation>
				
				<animation tween="Back" easing="InOut" effect="slide" end="0,-30" time="300" condition="ControlGroup(9901).HasFocus + !Skin.HasSetting(home.menu2)">Conditional</animation>
				
				<control type="image">
					<width>1280</width>
					<height>100</height>
					<posy>460</posy>
					<texture colordiffuse="base_1play">overlays/diffuse.png</texture>
					<visible>Skin.HasSetting(home.menu2)</visible>
				</control>
				<control type="image">
					<width>1280</width>
					<height>141</height>
					<posy>460</posy>
					<texture colordiffuse="whitetrans">overlays/cover_overlay.png</texture>
					<visible>Skin.HasSetting(home.menu2)</visible>
				</control>
					
				<control type="wraplist" id="9110">
				  <posy>327</posy>
				  <width>1500</width>
				  <imagepath>white.png</imagepath>
				  <visible>true</visible>
				  <onup condition="Control.IsVisible(9145) + Container(9110).HasFocus(802)">SetFocus(9140,0)</onup>
				  <onup condition="Control.IsVisible(9155) + Container(9110).HasFocus(200)">SetFocus(9150,0)</onup>
				  <onup condition="Control.IsVisible(9165) + Container(9110).HasFocus(300)">SetFocus(9160,0)</onup>
				  <onup condition="Control.IsVisible(9175) + Container(9110).HasFocus(500)">SetFocus(9170,0)</onup>
				  <onup condition="Control.IsVisible(9185) + Container(9110).HasFocus(904)">SetFocus(9180,0)</onup>
				  <onup condition="Control.IsVisible(9186) + Container(9110).HasFocus(908)">SetFocus(9181,0)</onup>
				  <onup condition="Control.IsVisible(9188) + Container(9110).HasFocus(909)">SetFocus(9183,0)</onup>
				  <ondown condition="Control.IsVisible(9901)">SetFocus(9901)</ondown>
				  <orientation>horizontal</orientation>
				  <include condition="Skin.HasSetting(home.menu2)">homepos2</include>
				  <include condition="!Skin.HasSetting(home.menu2)">homepos1</include>
				  <include>home_newmenu</include>				
				 
				  <itemlayout width="320" height="150" condition="Skin.HasSetting(home.menu2)">
					<control type="group">
						<posx>0</posx>
						<posy>130</posy>
						<control type="label">
							<align>center</align>
							<height>100</height>
							<font>light_Category</font>
							<selectedcolor>green</selectedcolor>		
							<info>ListItem.Label</info>
						</control>
					</control>
				  </itemlayout>
				 
				  <focusedlayout height="150" width="320" condition="Skin.HasSetting(home.menu2)">

					<control type="group">
						<posx>0</posx>
						<posy>130</posy>
						<control type="label">
							<align>center</align>
							<aligny>center</aligny>
							<height>100</height>
							<font>light_Header_Big</font>
							<selectedcolor>green</selectedcolor>		
							<info>ListItem.Label</info>
							<visible>Control.HasFocus(9110)</visible>
						</control>
						<control type="label">
							<align>center</align>
							<aligny>center</aligny>
							<height>100</height>
							<font>light_Header</font>
							<selectedcolor>green</selectedcolor>		
							<info>ListItem.Label</info>
							<visible>!Control.HasFocus(9110)</visible>
						</control>
					</control>
				  </focusedlayout>
				  
				   <itemlayout width="200" height="150" condition="!Skin.HasSetting(home.menu2)">
					<control type="group">
						<posx>0</posx>
						<posy>130</posy>
						<control type="label">
							<align>center</align>
							<height>100</height>
							<font>light_Header</font>
							<selectedcolor>green</selectedcolor>		
							<info>ListItem.Label</info>
						</control>
					</control>
				  </itemlayout>
				 
				  <focusedlayout height="300" width="455" condition="!Skin.HasSetting(home.menu2)">
					<control type="group">
						<top>5</top>
						<control type="image">
							<posx>-118</posx>
							<posy>40</posy>
							<width>488</width>
							<height>275</height>
							<texture>frames/frame-alt.png</texture>
							<animation effect="fade" start="0" end="100" time="100" delay="400">Conditional</animation>
							<aspectratio>stretch</aspectratio>
						</control>
						<control type="image">
							<posx>-100</posx>
							<posy>50</posy>
							<width>450</width>
							<height>255</height>
							<texture>white.png</texture>
							<include>bordertrans</include>
							<visible>Control.HasFocus(9110)</visible>
							<aspectratio>scale</aspectratio>
						</control>
						<control type="image">
							<posx>-100</posx>
							<posy>50</posy>
							<width>450</width>
							<height>255</height>
							<info>ListItem.Thumb</info>
							<fadetime>500</fadetime>
							<include>bordertrans_Big</include>
							<aspectratio>scale</aspectratio>
						</control>
						<control type="image">
							<posx>-100</posx>
							<posy>50</posy>
							<width>450</width>
							<height>255</height>
							<texture>overlays/cover_overlay.png</texture>
							<visible>!Skin.HasSetting(globalGlass.disable)</visible>
						</control>
					</control>					
					<control type="group">
					<top>5</top>
						<control type="label">
							<posx>-100</posx>
							<posy>5</posy>
							<width>450</width>
							<height>22</height>
							<font>light_Header</font>
							<aligny>center</aligny>
							<textcolor>Color1</textcolor>
							<selectedcolor>base_3</selectedcolor>
							<align>left</align>
							<info>ListItem.Label</info>		
						</control>
					</control>
				  </focusedlayout>
				  
				</control>
				<include>home_newsubmenu</include>				
			</control>
		
		</control>
	

	<!--home submenu triggers-->
