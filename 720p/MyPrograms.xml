<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">50</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<views>50,522,572,574</views>
	<controls>
		<!--global includes-->
		<include>global_Background</include>
		<include>global_Includes</include>
		<include>global_MenuGuide</include>
		<include>windowTitle_Programs</include>
		<include>PageControls</include>
		<!--view includes-->
		<include>view_List</include>
		<!--50-->
		<include>view_SlidePoster</include>
		<!--52-->
		<include>view_SlideLandscape</include>
		<!--521-->
		<include>view_SlideSquare</include>
		<!--522-->
		<include>view_IconSquare</include>
		<!--572-->
		<include>view_IconSquareSmall</include>
		<!--574-->
		<!--detail includes-->
		<include>detail_ListAddons</include>
		<include>detail_Slide</include>
		<!--menu-->
		<include>menu_Files</include>
		<control type="group">
			<include>toggle_Menu</include>
			<include>transition_Info</include>
			<include>transition_Content</include>
			<include>fadeinout</include>
			<visible>Control.IsVisible(50)</visible>
			<!--landscape-->
			<control type="group">
				<control type="group">
					<left>680</left>
					<top>90</top>
					<visible>!Skin.HasSetting(viewlist.poster) + SubString(Container.FolderPath,plugin://plugin.program.advanced.launcher/?)</visible>
					<control type="group">
						<left>7</left>
						<top>7</top>
						<control type="image">
							<width>546</width>
							<height>309</height>
							<texture background="true">white.png</texture>
							<fadetime>fadetime_Thumb</fadetime>
							<aspectratio align="center" aligny="top">scale</aspectratio>
							<visible>Container.Position(0)</visible>
						</control>
						<control type="image">
							<left>202</left>
							<top>83.5</top>
							<width>128</width>
							<height>128</height>
							<include>art_DefaultIcon</include>
							<colordiffuse condition="Container.Position(0)">Color5</colordiffuse>
							<fadetime>fadetime_Thumb</fadetime>
						</control>
						<control type="image">
							<width>546</width>
							<height>309</height>
							<texture background="true">$INFO[ListItem.Property(Fanart_Image)]</texture>
							<include>bordertrans</include>
							<fadetime>fadetime_Thumb</fadetime>
							<aspectratio align="center" aligny="top">scale</aspectratio>
						</control>
						<control type="image">
							<width>546</width>
							<height>309</height>
							<texture background="true">overlays/cover_overlay.png</texture>
							<fadetime>fadetime_Thumb</fadetime>
							<aspectratio align="center" aligny="top">scale</aspectratio>
							<visible>!Skin.HasSetting(globalGlass.disable)</visible>
						</control>
						<control type="textbox">
							<top>315</top>
							<width>532</width>
							<height>auto</height>
							<label>$VAR[global_Plot]</label>
							<include>detail_Text</include>
						</control>
					</control>
				</control>
			</control>		
			<!-- poster -->
			<control type="group">
				<left>750</left>
				<top>80</top>
				<control type="group">					
					<control type="group">
						<visible>Skin.HasSetting(viewlist.poster) + SubString(Container.FolderPath,plugin://plugin.program.advanced.launcher/?)</visible>
						<left>7</left>
						<top>7</top>
						<control type="image">
							<width>420</width>
							<height>614</height>
							<texture background="true">white.png</texture>
							<fadetime>fadetime_Thumb</fadetime>
							<aspectratio align="center" aligny="top">scale</aspectratio>
							<visible>Container.Position(0)</visible>
						</control>
						<control type="image">
							<left>139</left>
							<top>236</top>
							<width>128</width>
							<height>128</height>
							<include>art_DefaultIcon</include>
							<colordiffuse condition="Container.Position(0)">Color5</colordiffuse>
							<fadetime>fadetime_Thumb</fadetime>
						</control>
						<control type="image">
							<width>420</width>
							<height>614</height>
							<texture background="true">$VAR[thumb_Portrait]</texture>
							<include>bordertrans</include>
							<aspectratio align="center" aligny="center">scale</aspectratio>
							<fadetime>fadetime_Thumb</fadetime>
						</control>
						<control type="image">
							<width>420</width>
							<height>614</height>
							<texture background="true">overlays/cover_overlay.png</texture>
							<aspectratio align="center" aligny="center">scale</aspectratio>
							<fadetime>fadetime_Thumb</fadetime>
							<visible>!Skin.HasSetting(globalGlass.disable) + !IsEmpty(ListItem.Thumb)</visible>
						</control>
					</control>
				</control>
			</control>			
		</control>
		<!--scrollbars-->
		<include>PageControls</include>
	</controls>
</window>