				<top>440</top>
				<width>680</width>
				<visible>true</visible>
				<label>$INFO[Container(5561).ListItem.Label]</label>
				<include>container_Title</include>
			</control>
			<control type="label">
				<left>25</left>
				<top>468</top>
				<width>680</width>
				<visible>true</visible>
				<label>$VAR[hubSub]</label>
				<include>container_Sub_Small</include>
			</control>
