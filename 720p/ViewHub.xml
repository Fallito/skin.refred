				<left>25</left>
				<top>495</top>
				<width>680</width>
				<itemgap>10</itemgap>
				<orientation>horizontal</orientation>
					<control type="image">
						<width>59</width>
						<height>40</height>
						<texture>$VAR[hubRating]</texture>
						<aspectratio align="center">keep</aspectratio>
					</control>
					<control type="image">
						<width>59</width>
						<height>40</height>
						<texture>$VAR[hubResolution]</texture>
						<aspectratio align="left">keep</aspectratio>
					</control>
					<control type="image">
						<width>59</width>
						<height>40</height>
						<texture>$VAR[hubCodec]</texture>
						<aspectratio align="left">keep</aspectratio>
					</control>
					<control type="image">
						<width>59</width>
						<height>40</height>
						<texture>$VAR[hubAudioCodec]</texture>
						<aspectratio align="left">keep</aspectratio>
					</control>
					<control type="image">
						<width>40</width>
						<height>40</height>
						<aspectratio align="left" aligny="center">keep</aspectratio>
						<texture>$VAR[hubAudioChannels]</texture>
					</control>	
					<control type="image">
						<width>59</width>
						<height>40</height>
						<texture>$VAR[hubVideoAspect]</texture>
						<aspectratio align="left">keep</aspectratio>
					</control>					
			</control>
		</control>
